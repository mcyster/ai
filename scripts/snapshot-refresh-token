#!/usr/bin/env bash
set -eu
set -o pipefail
#

SCOPES="https://www.googleapis.com/auth/userinfo.profile"
REDIRECT_URI=http://localhost:8090/snapshot

usage="Usage: $(basename $0) [-h][-r redirect_url] credentials_json_file [code]
    -h - help
    -r redirect_url - defaults to $REDIRECT_URI
    credntials_json_file
    code

Gets a refresh_token
"

while [ $# -gt 0 ]; do
    case "$1" in
        -h|-\?)
            echo "$usage"
            exit 0
        ;;
        -r)
            REDIRECT_URI="$1"
            shift
        ;;
        *)
            break
        ;;
    esac
    shift
done

CREDENTIALS_FILE="${1:-}"
if [ -z "$CREDENTIALS_FILE" ]; then
    echo "Error: no credentials json file specified, please download from google (can only download on create) and specify file as parameter"
    exit 1
fi

CLIENT_ID=$(jq -r '.web.client_id' "$CREDENTIALS_FILE")
CLIENT_SECRET=$(jq -r '.web.client_secret' "$CREDENTIALS_FILE")
TOKEN_URI=$(jq -r '.web.token_uri' "$CREDENTIALS_FILE")


CODE="${2:-}"
if [ -z "$CODE" ]; then
  echo "Paste this url in your browser, then get the code parameter (note %2F is /) from the redirect url and rerun this script"
  echo "  https://accounts.google.com/o/oauth2/auth?client_id=$CLIENT_ID&redirect_uri=$REDIRECT_URI&response_type=code&scope=$SCOPES&access_type=offline&prompt=consent"
  exit 1
fi

curl "$TOKEN_URI" \
  -d client_id="$CLIENT_ID" \
  -d client_secret="$CLIENT_SECRET" \
  -d code="$CODE" \
  -d grant_type=authorization_code \
  -d redirect_uri="$REDIRECT_URI" 

